@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var ProcessamentosViewModel = new TechChallenge.Pages.Model.ListaDeProcessamentosViewModel();
    var Processamentos = ProcessamentosViewModel.Processamentos;
}

<h1>Cadastrar Cliente</h1>
<div class="container">
    <form method="post" enctype="multipart/form-data" action="/Videos/Enviar">
        <div>
            <label for="videoFile">Selecione o vídeo:</label>
            <input type="file" name="videoFile" id="videoFile" accept="video/*" />
        </div>
        <br />
        <div>
            <input type="submit" value="Enviar Vídeo" />
        </div>
    </form>
    <form asp-action="ListaVideos" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Arquivo ZIP</th>
                    <th>Status Processamento</th>
                    <th>Selecionar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var video in Processamentos)
                {
                    <tr>
                        <td>@video.Id</td>
                        <td>@video.ArquivoZIP</td>
                        <td>@video.StatusProcessamento</td>
                        <td><input type="checkbox" name="produtosSelecionados" value="@video.Id" /></td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit">Selecionar Produtos</button>
    </form>
</div>

@if (TempData["ErroMensagem"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErroMensagem"]
    </div>
}


