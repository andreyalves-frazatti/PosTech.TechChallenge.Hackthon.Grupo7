@page
@model Site.Pages.CadastroModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

}

<h1>Cadastrar Cliente</h1>
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Video" type="file" accept="Video/*" />
        <input type="submit" class="btn btn-primary" />
    </form>
</div>

<div class="container">
    <form method="get" enctype="multipart/form-data">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Arquivo ZIP</th>
                    <th>Status Processamento</th>
                    <th>Selecionar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var video in Model.viewModel.Processamentos)
                {
                    <tr>
                        <td>@video.Id</td>
                        <td>@video.ArquivoZIP</td>
                        <td>@video.StatusProcessamento</td>
                        <td><input type="checkbox" name="ArquivosZIPSelecionados" value="@video.Id" /></td>
                    </tr>
                }
            </tbody>
        </table>
        <input type="submit" class="btn btn-primary" />
    </form>
</div>

@if (TempData["ErroMensagem"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErroMensagem"]
    </div>
}


